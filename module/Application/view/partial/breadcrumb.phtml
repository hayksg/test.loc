<ul class="breadcrumb">
    <?php foreach ($this->pages as $key => $page) : ?>
        <li>
            <?php if ($key < count($this->pages) - 1) : ?>
                <a href="<?= $page->href ?>"><?= $page->label ?></a>
            <?php else : ?>
                <?= $page->label ?>
            <?php endif; ?>
        </li>
    <?php endforeach; ?>
</ul>